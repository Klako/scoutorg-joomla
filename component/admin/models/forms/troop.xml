<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="troop" label="COM_SCOUTORG_TROOP">
        <field
            name="uid"
            type="hidden"
        />
        <field
            name="name"
            type="text"
            label="Name"
            description="Name of the troop"
            required="true"
        />
        <field
            name="branch"
            type="branches"
            label="COM_SCOUTORG_TROOP_BRANCH_LABEL"
            description="COM_SCOUTORG_TROOP_BRANCH_DESC"
            required="false"
        />
    </fieldset>
    <fieldset name="patrols" label="weh">
        <field
            name="patrols"
            type="orgobjectsubform"
            label="Patrols"
            description="The troop's patrols"
            multiple="true"
            buttons=""
            layout="joomla.form.field.subform.repeatable-table"
        >
            <form>
                <field
                    name="uid"
                    type="hidden"
                />
                <field
                    name="name"
                    type="scoutorgtext"
                    filter="safehtml"
                />
                <field
                    name="source"
                    type="text"
                    filter="safehtml"
                    readonly="true"
                    default="joomla"
                />
            </form>
        </field>
    </fieldset>
</form>